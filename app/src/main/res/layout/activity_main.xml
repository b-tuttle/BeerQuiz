<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.beerquiz.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@string/question1"
            tools:text="placeholder for question one" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/answer_1a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/answer_1a" />

            <RadioButton
                android:id="@+id/answer_1b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/answer_1b" />

            <RadioButton
                android:id="@+id/answer_1c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/answer_1c" />

        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/question2" />

        <CheckBox
            android:id="@+id/answer_2a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/answer_2a" />

        <CheckBox
            android:id="@+id/answer_2b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/answer_2b" />

        <CheckBox
            android:id="@+id/answer_2c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/answer_2c" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/question3"
            tools:text="placeholder for question three" />

        <EditText
            android:id="@+id/answer3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/question4" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/answer_4a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/answer_4a" />

            <RadioButton
                android:id="@+id/answer_4b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/answer_4b" />

            <RadioButton
                android:id="@+id/answer_4c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/answer_4c" />

        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/question5" />

        <CheckBox
            android:id="@+id/answer_5a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/answer_5a" />

        <CheckBox
            android:id="@+id/answer_5b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/answer_5b" />

        <CheckBox
            android:id="@+id/answer_5c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/answer_5c" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/question6"
            tools:text="placeholder for question three" />

        <EditText
            android:id="@+id/answer_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text" />

        <Button
            android:id="@+id/submit_answers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit Answers"/>

    </LinearLayout>
</ScrollView>